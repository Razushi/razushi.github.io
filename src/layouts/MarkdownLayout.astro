---
const { title, description } = Astro.frontmatter || {}; // Fix null issue
---

<html>
  <head>
    <title>{title || 'Page Title'}</title>
    <meta name="description" content={description || 'Page description'} />
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
      </nav>
    </header>
    <main>
      <h1>{title}</h1>
      <slot />
    </main>
    <footer>
      <p>&copy; 2025 Razushi</p>
    </footer>
  </body>
</html>
